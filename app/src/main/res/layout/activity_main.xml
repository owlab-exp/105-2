    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.android.calendartest6.TimeLineView xmlns:tp="http://schemas.android.com/apk/res-auto"
            android:id="@+id/timePlane"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tp:nowLineColor="#FF7F6E"
            tp:nowLineThickness="10dp"
            tp:halfTimeLineColor="#f0f2ec"
            tp:halfTimeLineThickness="1dp"
            tp:timeLabelTextColor="#555555"
            tp:timeLabelTextSize="14sp"

            tp:timeLineColor="#DDDDDD"
            tp:timeLineThickness="1dp" />

    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>

